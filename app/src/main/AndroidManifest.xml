<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tuannq.tflat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.TFlat.NoActionBar">
        <activity android:name=".activity.ListActivity"></activity>
        <activity android:name=".activity.SettingActivity" />

        <activity android:name=".activity.PresentActivity" />
        <activity android:name=".activity.QuesActivity" />

        <receiver android:name=".control.AlarmReceiver" />

        <activity android:name=".activity.SearchActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_tab"
            android:theme="@style/Theme.TFlat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.FavoriteActivity" />
        <activity android:name=".activity.HistoryActivity" />
        <activity android:name=".activity.TranslateParagraphActivity" />
        <activity android:name=".activity.TranslateActivity" />
    </application>

</manifest>